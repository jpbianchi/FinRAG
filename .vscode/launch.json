
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["main:app", "--host", "0.0.0.0", "--port", "80", "--reload"],
            "jinja": true,
            "cwd": "${workspaceFolder}/app",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd":"${fileDirname}",
            "justMyCode": true
        },
    ]
}
    
